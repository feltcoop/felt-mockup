  "scripts": {
    "dev": "sapper dev",
    "build": "npm run build:ts && npm run build:tw && sapper build --legacy",
    "deploy": "cp src/project/deploy/deploy.js src/project/deploy/deploy.mjs && NODE_ENV=production node --experimental-modules src/project/deploy/deploy.mjs",
    "deploy:dry": "cp src/project/deploy/deploy.js src/project/deploy/deploy.mjs && DEPLOY_DRY_RUN=1 NODE_ENV=production node --experimental-modules src/project/deploy/deploy.mjs",
    "build:ts": "tsc",
    "ts": "tsc -w",
    "build:tw": "NODE_ENV=production postcss static/tailwind.css -o static/index.css",
    "tw": "postcss static/tailwind.css -o static/index.css -w",
    "start": "node __sapper__/build",
    "test": "echo 'to be decided!'"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.1",
    "dotenv": "^8.2.0",
    "kleur": "^3.0.3",
    "minimist": "^1.2.5",
    "polka": "next",
    "sirv": "^0.4.0"
  },
  "devDependencies": {
